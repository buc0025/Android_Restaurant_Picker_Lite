<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RestaurantInfoActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/restaurantInfoImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/ic_launcher_foreground"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/restaurantInfoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/restaurantInfoImg"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="restaurant info" />
    
    <Button
        android:id="@+id/websiteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/directionsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/pickagainBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
    
    <ToggleButton
        android:id="@+id/favoriteBtn"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:layout_gravity="center"
        android:textOff=""
        android:textOn=""
        android:background="@drawable/custom_button"/>

    
</LinearLayout>