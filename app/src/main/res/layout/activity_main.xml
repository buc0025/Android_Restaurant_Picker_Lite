<!--                        android:id="@+id/opened"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:checked="true"-->
<!--                        android:text="Opened"-->
<!--                        android:textSize="18sp"-->
